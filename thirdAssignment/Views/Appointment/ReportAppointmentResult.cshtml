@model List<thirdAssignment.Aplication.Models.LabTestAppointmentModel>

<div class="container mt-5">
    <div class="d-flex justify-content-end mb-4">
        <!-- Additional buttons or actions can be added here -->
    </div>

    @if (Model.Count == 0)
    {
        <h1 class="text-center text-muted">There are no Pending results available</h1>
    }
    else
    {
        <div class="container text-center">
            <div class="row font-weight-bold border-bottom mb-4">
                <div class="col-md-6 h4">Lab Test</div>
                <div class="col-md-6 h4 text-right">State</div>
            </div>
            @foreach (var labResult in Model)
            {
                string testResult = !@labResult.IsNotPending ? "Pending" : "Complete";
                <div class="row align-items-center border-bottom py-3">
                    <div class="col-md-6">@labResult.LabTest.Name</div>
                    <div class="col-md-6 text-right font-weight-bold"> @testResult </div>
                </div>
            }
        </div>
        <div class="d-flex justify-content-end mt-4">
            <form method="post" asp-controller="Appointment" asp-action="ReportAppointmentResult" class="form-inline">

                <button type="submit" class="btn btn-lg btn-primary mb-2 ml-2">Complete Appointment</button>
                <a asp-controller="Appointment" asp-action="Index" class="btn btn-lg btn-outline-warning ml-2 mb-2">Close Results</a>
            </form>
        </div>
    }
</div>

<style>
    .container {
        max-width: 900px;
    }

    .row {
        font-size: 1.2rem;
    }

    .font-weight-bold {
        font-weight: 700 !important;
    }

    .btn {
        font-size: 1rem;
    }
</style>

