@model List<thirdAssignment.Aplication.Models.LabTestAppointment.LabTestAppointmentModel>

<div class="container mt-5">
    <div class="d-flex justify-content-end mb-4">
    </div>

    @if (Model.Count == 0)
    {
        <h1 class="text-center text-muted">There are no Pending results available</h1>
    }
    else
    {
        <div class="container text-center">
            <div class="row font-weight-bold border-bottom mb-4">
                <div class="col-md-6 h4">Lab Test</div>
                <div class="col-md-6 h4 text-right">Results</div>
            </div>
            @foreach (var labResult in Model)
            {
                string testResult = string.IsNullOrEmpty(@labResult.TestResult) ? "No results yet" : @labResult.TestResult;
                <div class="row align-items-center border-bottom py-3">
                    <div class="col-md-6">@labResult.LabTest.Name</div>
                    <div class="col-md-6 text-right font-weight-bold"> @testResult </div>
                </div>
            }
        </div>
        <div class="d-flex justify-content-end mt-4">
                <a asp-controller="Appointment" asp-action="Index" class="btn btn-lg btn-outline-warning ml-2 mb-2">Go back</a>
        </div>
    }
</div>

<style>
    .container {
        max-width: 900px;
    }

    .row {
        font-size: 1.2rem;
    }

    .font-weight-bold {
        font-weight: 700 !important;
    }

    .btn {
        font-size: 1rem;
    }
</style>