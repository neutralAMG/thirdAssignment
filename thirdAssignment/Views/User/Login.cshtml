﻿
@if (ViewBag.Message is not null)
{
    <p class="alert-danger d-block text-center">@ViewBag.message</p>
}
<div class="row">
    <div class="col-8 offset-2">
        <div class=" bg-dark text-light">
            <h1 class="text-center"> LogIn </h1>
        </div>
        <div class="card shadow-sm">
            <div class="card-body">
                <section>
                    <form method="post" asp-controller="User" asp-action="Login">
                        <div class="mb-3">
                            <label for="username" class="form-label"> Username</label>
                            <input type="text" name="username" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label"> Password</label>
                            <input type="text" name="password" class="form-control" />
                        </div>
                        <div class="p-2">
                            <button asp-controller="User" asp-action="Login" class="btn btn-primary  float-end  p-2 "> Login </button>
                            <a asp-controller="User" asp-action="Register" class="btn btn-outline-warning  float-end  p-2  mx-2"> Register </a>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
</div>