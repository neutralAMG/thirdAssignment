@model List<thirdAssignment.Aplication.Models.User.UserModel>

<div class="container mt-5">
    <h1 class="display-4 mb-4 text-center font-weight-bold">User's Maintenance</h1>
    <div class="d-flex justify-content-end mb-4">
        <a asp-controller="User" asp-action="SaveUser" class="btn btn-primary">Add a new User</a>
    </div>

    @if (Model.Count == 0)
    {
        <h1>There are no users created</h1>
    }
    else
    {
        <div class="row">
            @foreach (var user in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@user.Name @user.LastName</h5>
                            <p class="card-text">
                                <strong>Email:</strong> @user.EMailAddress<br />
                                <strong>Role:</strong> @user.UserRol.Name<br />
                                <strong>Username:</strong> @user.UserName
                            </p>
                        </div>
                        <div class="card-footer bg-white border-top-0 d-flex justify-content-end">
                            <a href="@Url.Action("EditUser", "User", new { id = user.Id })" class="btn btn-outline-warning mr-2">Edit</a>
                            <a href="@Url.Action("DeleteUser", "User", new { id = user.Id })" class="btn btn-danger">Delete</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>