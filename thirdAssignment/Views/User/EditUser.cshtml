
@model  thirdAssignment.Presentation.Models.EditUserViewModel

@if (ViewBag.message is not null)
{
    <p class="alert-danger d-block text-center">@ViewBag.message</p>
}
<div class="row">
    <div class="col-8 offset-2">
        <div class=" bg-dark text-light">
            <h1> Edit User</h1>
        </div>
        <div class="card shadow-sm">
            <div class="card-body">

                <section>
                    <form method="post" asp-controller="User" asp-action="EditUser">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <input type="type" name="Id" value="@Model.userToEdit.Id" class="visually-hidden" />
                        <input type="type" name="ConsultingRoomId" value="@Model.userToEdit.ConsultingRoom.Id" class="visually-hidden" />
                        <input type="type" name="ConsultingRoomName" value="@Model.userToEdit.ConsultingRoomName" class="visually-hidden" />

   

                        <div class="mb-3">
                            <label for="Name" class="form-label"> Name</label>
                            <input type="text" name="Name" required value="@Model.userToEdit.Name" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label for="LastName" class="form-label"> Last Name</label>
                            <input type="text" name="LastName" required value="@Model.userToEdit.LastName" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label for="UserName" class="form-label"> User Name </label>
                            <input type="text" name="UserName" required value="@Model.userToEdit.UserName" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label for="EMailAddress" class="form-label"> EMail Address </label>
                            <input type="text" name="EMailAddress" required value="@Model.userToEdit.EMailAddress" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label for="Password" class="form-label"> Password </label>
                            <input type="text" name="Password" required class="form-control" />
                        </div>


                        <div class="mb-3">
                            <label for="ConfirmPassword" class="form-label"> Confirm Password </label>
                            <input type="text" name="ConfirmPassword" required  class="form-control" />
                         </div>

                        <div class="p-2">
                            <button asp-controller="User" asp-action="EditUser" class="btn btn-primary  float-end  p-2  "> Edit </button>
                            <button asp-controller="User" asp-action="index" class="btn btn-outline-warning  float-end  p-2  mx-2"> Go Back </button>
                        </div>
                    </form>

                </section>

            </div>
        </div>
    </div>
</div>