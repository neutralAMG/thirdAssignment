@model Dictionary<int, List<SelectListItem>>

@if (ViewBag.Message is not null)
{
    <p class="alert-danger d-block text-center">@ViewBag.message</p>
}

<div class="row">
    <div class="col-8 offset-2">
        <div class=" bg-dark text-light">
            <h1 class="text-center"> Add a new Patient </h1>
        </div>
        <div class="card shadow-sm">
            <div class="card-body">

                <section>
                    <form method="post" asp-controller="Patient" asp-action="SavePatient">

                        <div class="mb-3">
                            <label for="Name" class="form-label"> Name</label>
                            <input type="text" name="Name" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label for="LastName" class="form-label"> Last Name</label>
                            <input type="text" name="LastName" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label for="EMailAddress" class="form-label"> EMail Address</label>
                            <input type="text" name="EMailAddress" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label for="PhoneNumber" class="form-label"> Phone Number</label>
                            <input type="text" name="PhoneNumber" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label for="Cedula" class="form-label"> Cedula </label>
                            <input type="text" name="Cedula" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label for="Address" class="form-label"> Address </label>
                            <input type="text" name="Address" class="form-control" />
                        </div>


                        <div class="mb-3">
                            <label for="smokes" class="form-label"> Smoke's </label>
                            <select name="smokes" id="smokes" class="form-select" asp-items="@Model[1]"> </select>
                        </div>

                        <div class="mb-3">
                            <label for="hasAlergies" class="form-label"> Has allergie's </label>
                            <select name="RolId" id="hasAlergies" class="form-select" asp-items="Model[2]"> </select>
                        </div>
                        <div class="mb-3">
                            <label for="BirthDate" class="form-label"> Birth date </label>
                            <input type="date" name="BirthDate" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label for="img" class="form-label"> Image </label>
                            <input type="file" name="img" class="form-control" />
                        </div>
                        <div class="p-2">
                            <button asp-controller="Patient" asp-action="SavePatient" class="btn btn-primary  float-end  p-2 "> Save </button>
                            <a asp-controller="Patient" asp-action="Index" class="btn btn-outline-warning  float-end  p-2  mx-2"> Go Back </a>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
</div>